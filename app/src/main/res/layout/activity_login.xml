<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="android.text.TextUtils"/>
        <variable name="activity" type="com.yesjnet.gwanak.ui.main.LoginActivity"/>
        <variable name="viewModel" type="com.yesjnet.gwanak.ui.main.LoginViewModel"/>
        <variable name="listener" type="com.yesjnet.gwanak.extension.OnSingleClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <include android:id="@+id/icHeader" layout="@layout/layout_appbar" />
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/icHeader"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvDesc1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="42dp"
                    android:gravity="center_horizontal"
                    android:textSize="18dp"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:textColor="@color/color_222222"
                    android:text="@string/login_desc_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- 아이디 입력 -->
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginTop="20dp"
                    android:text="@={viewModel.onBindId}"
                    android:singleLine="true"
                    android:hint="@string/id_input_hint"
                    android:background="@drawable/edit_focus_list"
                    app:layout_constraintTop_toBottomOf="@id/tvDesc1"
                    style="@style/DefaultEditText"/>

                <!-- 비밀번호 입력 -->
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etPwd"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:paddingHorizontal="15dp"
                    android:text="@={viewModel.onBindPwd}"
                    android:singleLine="true"
                    android:background="@drawable/edit_focus_list"
                    app:layout_constraintTop_toBottomOf="@id/etId"
                    style="@style/PwdEditText"/>

                <include
                    android:id="@+id/icAutoLogin"
                    layout="@layout/layout_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:visibility="gone"
                    app:value="@{@string/auto_login}"
                    app:isChecked="@{viewModel.onAutoLogin}"
                    app:listener="@{activity}"
                    app:layout_constraintTop_toBottomOf="@+id/etPwd"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btLogin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:textSize="21dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/style_bold"
                    android:text="@string/login"
                    android:onClick="@{() -> viewModel.onClickLogin(viewModel.onBindId, viewModel.onBindPwd)}"
                    bgColor="@{@color/primary_color}"
                    rippleColor="@{@color/ripple_effect}"
                    app:layout_constraintTop_toBottomOf="@id/icAutoLogin"
                    tools:background="@color/primary_color"/>

                <!-- 회원가입, 아이디 찾기, 비밀번호 찾기 미사용 숨기기 처리 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clIdPwd"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="20dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/btLogin">
                    <TextView
                        android:id="@+id/tvSignup"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textColor="@color/color_555555"
                        android:onClick="@{() -> viewModel.onClickSignup()}"
                        rippleColor="@{@color/ripple_effect}"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvDot1"/>
                    <TextView
                        android:id="@+id/tvDot1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" · "
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvSignup"
                        app:layout_constraintEnd_toStartOf="@id/tvFindId"/>
                    <TextView
                        android:id="@+id/tvFindId"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textColor="@color/color_555555"
                        android:onClick="@{() -> viewModel.onClickFindId()}"
                        rippleColor="@{@color/ripple_effect}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvDot1"
                        app:layout_constraintEnd_toStartOf="@id/tvDot2"/>
                    <TextView
                        android:id="@+id/tvDot2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" · "
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvFindId"
                        app:layout_constraintEnd_toStartOf="@id/tvFindPwd"/>
                    <TextView
                        android:id="@+id/tvFindPwd"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textColor="@color/color_555555"
                        android:onClick="@{() -> viewModel.onClickFindPwd()}"
                        rippleColor="@{@color/ripple_effect}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvDot2"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <include
                    android:id="@+id/icDotInfo1"
                    layout="@layout/layout_dot_text_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="14dp"
                    app:value="@{@string/login_caption_1}"
                    app:textColor="@{@color/color_555555}"
                    app:dotColor="@{@drawable/circle_666666}"
                    app:layout_constraintTop_toBottomOf="@+id/clIdPwd"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <include
                    android:id="@+id/icDotInfo2"
                    layout="@layout/layout_dot_text_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginHorizontal="14dp"
                    app:value="@{@string/login_caption_1}"
                    app:textColor="@{@color/color_555555}"
                    app:dotColor="@{@drawable/circle_666666}"
                    app:layout_constraintTop_toBottomOf="@+id/icDotInfo1"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <include
            layout="@layout/layout_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:show="@{viewModel.onDataProgress}"
            app:listener="@{listener}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>