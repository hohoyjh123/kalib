<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="dialog"
            type="com.yesjnet.gwanak.ui.dialog.CustomDialog"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rlMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/llMain"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_custom_dialog">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="24dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/style_bold"
                    tools:text="title" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="24dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/style_regular"
                    tools:text="message" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:gravity="center_horizontal"
                    android:textSize="11dp"
                    android:fontFamily="@font/style_regular"
                    tools:text="desc"/>

                <androidx.legacy.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    bgColor="@{@color/color_background}"
                    cornerLeftBottom="@{12}"
                    cornerRightBottom="@{12}">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btCancel"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:onClick="@{dialog::onClick}"
                        android:text="@string/cancel"
                        style="@style/CommonCancelButton" />

                    <View
                        android:id="@+id/viewMargin"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_background"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btOk"
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:onClick="@{dialog::onClick}"
                        style="@style/CommonOKButton" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>