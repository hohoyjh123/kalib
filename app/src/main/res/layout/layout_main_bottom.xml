<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.yesjnet.gwanak.core.EnumApp" />

        <variable
            name="viewModel"
            type="com.yesjnet.gwanak.ui.main.MainViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:background="@drawable/bg_white_round_top_8dp">

        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:elevation="8dp"
            android:background="@drawable/bg_white_round_top_8dp">

            <LinearLayout
                android:id="@+id/mainTab1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                rippleColor="@{@color/ripple_effect}"
                android:onClick="@{() -> viewModel.setSelectTab(EnumApp.MainPage.HOME)}">

                <ImageView
                    android:id="@+id/mainTabImage1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/mainTabLabel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:textColor="@color/color_292724"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mainTab2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                rippleColor="@{@color/ripple_effect}"
                android:onClick="@{() -> viewModel.setSelectTab(EnumApp.MainPage.BOOK_SEARCH)}">

                <ImageView
                    android:id="@+id/mainTabImage2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/mainTabLabel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:textColor="@color/color_292724"
                    android:textSize="13dp"  />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mainTab3_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mainTabImage3"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="15dp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/mainTabLabel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:textColor="@color/color_292724"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mainTab4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                rippleColor="@{@color/ripple_effect}"
                android:onClick="@{() -> viewModel.setSelectTab(EnumApp.MainPage.LOAN_STATUS)}">

                <ImageView
                    android:id="@+id/mainTabImage4"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/mainTabLabel4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:textColor="@color/color_292724"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mainTab5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                rippleColor="@{@color/ripple_effect}"
                android:onClick="@{() -> viewModel.setSelectTab(EnumApp.MainPage.BOOK_INTEREST)}">

                <ImageView
                    android:id="@+id/mainTabImage5"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/mainTabLabel5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:textColor="@color/color_292724"
                    android:textSize="13dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>